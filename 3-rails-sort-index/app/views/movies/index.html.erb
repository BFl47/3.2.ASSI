<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th <%= "class=hilite" if params[:sort] == "title" %>> <%=link_to 'Title', movies_path(sort: "title")%></th>
      <th>Rating</th>
      <th>Description</th>
      <th <%= "class=hilite" if params[:sort] == "r_date" %>> <%=link_to 'Realease date', movies_path(sort: "r_date")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.description %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

